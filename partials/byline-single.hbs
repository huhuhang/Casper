{{!-- Everything inside the #author tags pulls data from the author --}}
{{#primary_author}}

<section class="author-card">
    {{#if profile_image}}
    <img class="author-profile-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
    {{else}}
    <span class="avatar-wrapper">{{> "icons/avatar"}}</span>
    {{/if}}
    <section class="author-card-content">
        <h4 class="author-card-name"><a href="{{url}}">{{name}}</a></h4>
        {{#if bio}}
        <p>{{bio}}</p>
        {{else}}
        {{#if twitter}}
            <a class="social-link-custom" href="{{twitter_url}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
        {{/if}}
        {{#if facebook}}
            <a class="social-link-custom" href="{{facebook_url}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
        {{/if}}
        {{/if}}
    </section>
</section>

{{/primary_author}}